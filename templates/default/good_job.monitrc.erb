<% ([@out[:process_count].to_i || 1].max).times do |n| %>
  <% identifier = "#{@application}-#{n+1}" %>
  <% pid_dir = "/run/lock/#{@app_shortname}/" %>
  <% pid_file = "#{pid_dir.to_s}good_job.#{n}.pid" %>
  <% syslog = !!@out[:syslog] ? "2>&1 | logger -t good_job-#{identifier}" : '' %>
  <% queues = @out[:queues].present? ? '--queues=' + Array.wrap(@out[:queues]).join(',') : '' %>

  check process good_job_<%= identifier.to_s %>
  with pidfile <%= pid_file %>
  start program = "/bin/su - <%= node['deployer']['user'] %> -c 'cd <%= File.join(@deploy_to, 'current') %> && <%= @environment.map {|k,v| "#{k}=\"#{v}\""}.join(' ') %> bundle exec good_job start --daemonize --pidfile=<%= pid_file %> <%= queues.to_s %> <%= syslog.to_s %>'" with timeout 90 seconds
  stop program = "/bin/su - <%= node['deployer']['user'] %> -c 'cd <%= File.join(@deploy_to, 'current') %> && <%= @environment.map {|k,v| "#{k}=\"#{v}\""}.join(' ') %> cat <%= pid_file %> | xargs --no-run-if-empty kill -QUIT'" with timeout 90 seconds
  group good_job_<%= @application.to_s %>_group

<% end %>
